@model Employee
@{
    ViewData["Title"] = "New";
    SelectList DeptSelectList = new SelectList(ViewBag.DeptList,"Id","Name");
}

<h1>New</h1>
<form method="post" asp-action="SaveNew" asp-controller="Employee">
    @* @Html.AntiForgeryToken() *@
    <div class="text-danger" asp-validation-summary="All"></div>
    <div>
        <label asp-for="Name"></label>
        <input class="form form-control" asp-for="Name"/>
        <span asp-validation-for="Name" id="nameError" class="text-danger"></span>

    </div>
    <div>
        <label asp-for="Salary"></label>
        <input class="form form-control" asp-for="Salary"/>
        <span asp-validation-for="Salary" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="ImageUrl"></label>
        <input class="form form-control" asp-for="ImageUrl" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Email"></label>
        <input class="form form-control" asp-for="Email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="DepartmentId"></label>
        <select class="form form-control" asp-for="DepartmentId" asp-items="@DeptSelectList">
            <option value="0">-- Select DEpartment ---</option>
        </select>
        <span asp-validation-for="DepartmentId" class="text-danger"></span>
    </div>
    <input type="submit" value="Create" class="btn btn-success" />
</form>
<a asp-action="Index" asp-controller="Employee"> Back To List</a>


<script src="/lib/jquery/dist/jquery.min.js"></script>
<script src="/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>